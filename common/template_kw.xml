<root>
    <template name="cycler_column">
		<button_stringcycler>
			<anchored>
				<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
				<left offset="97" />
			</anchored>
		</button_stringcycler>
	</template>
