<root>
	<windowclass name="battletracker">
		<frame>ctbox</frame>
		<placement>
			<size width="650" height="500" />
		</placement>
		<sizelimits>
			<minimum width="650" height="750" />
			<dynamic />
		</sizelimits>
		<softclose />
		<nodelete />
		<script file="battletracker/scripts/battletracker.lua" />
		<sheetdata>
			<windowtitlebar name="title">
				<resource>battletracker_window_title</resource>
			</windowtitlebar>

			<genericcontrol name="topanchor">
				<anchored position="insidetop" offset="0,50" width="0" height="0" />
			</genericcontrol>
			<genericcontrol name="bottomanchor">
				<anchored position="insidebottom" offset="0,50" width="0" height="0" />
			</genericcontrol>

			<subwindow name="active_unit">
				<anchored>
					<left offset="7"/>
					<top parent="topanchor" anchor="bottom" />
					<right anchor="center" offset="-7" />
					<bottom anchor="center" />
				</anchored>
				<frame name="groupbox" offset="2,2,2,2" />
				<class>battletracker_unitsummary</class>
				<activate />
				<fastinit />
			</subwindow>

			<subwindow name="selected_unit">
				<anchored>
					<left offset="7"/>
					<top anchor="center" />
					<right anchor="center" offset="-7" />
					<bottom parent="bottomanchor" anchor="top" />
				</anchored>
				<frame name="groupbox" offset="2,2,2,2" />
				<class>battletracker_unitsummary</class>
				<activate />
				<fastinit />
			</subwindow>

			<windowlist name="list">
				<anchored>
					<left anchor="center" offset="7" />
					<top parent="topanchor" anchor="bottom" />
					<right offset="-7" />
					<bottom parent="bottomanchor" anchor="top" />
				</anchored>
				<script>
					function onFilter(win)
						return not ActorManagerKw.isUnit(win.getDatabaseNode());
					end
				</script>
				<frame name="groupbox" offset="2,2,2,2" />
				<datasource>.list</datasource>
				<class>battletracker_commander</class>
				<empty font="list-empty-ct" textres="ct_emptylist" />
				<skipempty />
			</windowlist>
			<scrollbar_list />

			<resize_ctbox />
			<close_ctbox />
		</sheetdata>
	</windowclass>
	
	<windowclass name="battletracker_commander">
		<margins control="0,0,0,5" />
		<frame>ctentrybox</frame>
		<sizelimits>
			<minimum height="50" />
		</sizelimits>
		<sheetdata>
			<stringfield name="name">
				<anchored position="insidetopleft" offset="5" />
			</stringfield>

			<windowlist name="list">
				<anchored>
					<left />
					<top parent="name" anchor="bottom" offset="5" />
					<right />
				</anchored>
				<script>
					function onFilter(win)
						local nodeWin = win.getDatabaseNode()
						return ActorManagerKw.isUnit(nodeWin) and window.getDatabaseNode() == ActorManagerKw.getCommanderCT(nodeWin);
					end
				</script>
				<datasource>..</datasource>
				<class>battletracker_unit</class>
				<columns width="60" fillwidth="true" />
				<skipempty />
			</windowlist>
		</sheetdata>
	</windowclass>

	<windowclass name="battletracker_unit">
		<sheetdata>
			<stringfield name="name">
				<anchored position="insidetopleft" height="40" />
				<sizelimits>
					<maximum width="60" />
					<maximum height="40" />
				</sizelimits>
				<multilinespacing>20</multilinespacing>
			</stringfield>
			<token_ctentry name="token">
				<anchored width="30" height="30">
					<top parent="name" anchor="bottom" offset="7" />
					<left offset="17" />
				</anchored>
			</token_ctentry>
		</sheetdata>
	</windowclass>
</root>