<root>
	<template name="unitsummary_divider">
		<genericcontrol>
			<anchored height="3">
				<left parent="" offset="5" />
				<right parent="" offset="-6" />
			</anchored>
			<frame name="separatorline" />
			<disabled />
		</genericcontrol>
	</template>
	
	<template name="battletracker_unitlist">
		<windowlist name="list">
			<script>
				function onDrop(x, y, draginfo)
					window.onDrop(x, y, draginfo);
				end
			</script>
			<anchored>
				<left />
				<top parent="name" anchor="bottom" offset="7" />
				<right />
			</anchored>
			<class>battletracker_unit</class>
			<sortby><control>name</control></sortby>
			<columns width="72" fillwidth="true" />
			<skipempty />
			<allowdelete />
		</windowlist>
	</template>
</root>