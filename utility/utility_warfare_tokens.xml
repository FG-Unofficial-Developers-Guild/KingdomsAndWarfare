			function onInit()
				registerMenuItem(Interface.getString("fortification_token_menu_delete"), "delete", 6);
				local node = getDatabaseNode();
				node.setPublic(true);
			end
			function onMenuSelection(selection)
				if selection == 6 then
					getDatabaseNode().delete();
				end
			end
