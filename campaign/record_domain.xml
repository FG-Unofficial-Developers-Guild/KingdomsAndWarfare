<root>
    <windowclass name="reference_domain">
        <frame>recordsheet</frame>
		<placement>
			<size width="460" height="550" />
		</placement>
		<sizelimits>
			<minimum width="460" height="400" />
			<dynamic />
		</sizelimits>
		<minimize>minimized_reference</minimize>
        <nodelete />
        <gmexport>domain</gmexport>
		<tooltip field="name" />
        <script file="campaign/scripts/domain.lua" />
        <sheetdata>
            <sub_record_header name="header">
				<class>domain_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />

            <subwindow_record name="main">
				<class>domain_main</class>
			</subwindow_record>
			<ft_record name="description">
				<anchored to="contentframe" position="over" />
				<invisible />
			</ft_record>

            <scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>description</target>
			</scrollbar_record>

			<tabs_recordsheet name="tabs">
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>description</subwindow>
				</tab>
			</tabs_recordsheet>
			
			<resize_recordsheet />
			<close_recordsheet />
        </sheetdata>
    </windowclass>

    <windowclass name="domain_header">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				name.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<link_record_header>
				<class>reference_domain</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name">
				<empty textres="library_recordtype_empty_domain" />
			</string_record_name>
			<label_reftype name="reftype">
				<static textres="ref_type_domain" />
			</label_reftype>	
		</sheetdata>
	</windowclass>

